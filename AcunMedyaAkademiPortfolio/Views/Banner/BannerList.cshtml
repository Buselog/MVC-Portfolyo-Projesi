@model IEnumerable<AcunMedyaAkademiPortfolio.Models.TblBanner>
@{
    ViewBag.Title = "BannerList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h4>Sayfa Reklam İçeriği</h4>


<table class="table table-bordered table-hover">


    <thead>
        <tr>
            <th scope="col">BannerId</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">ImageUrl</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td><b>@item.BannerId</b></td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td align="center">

                    <img src="@item.ImageUrl" alt="@item.Title" class="img-thumbnail" style="width:120px"/>

                </td>
                <td align="center">
                    <a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-outline-info d-inline-block btn-sm">Güncelle</a>
                    &nbsp
                    <a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-outline-danger d-inline-block btn-sm">Sil</a>
                </td>
            </tr>
        }


    </tbody>

</table>

<br />
<a href="/Banner/CreateBanner" class="btn btn-outline-success">Yeni Reklam Ekle</a>
